<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.registrationpage3.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/twin_sharing_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twin Sharing" />

        <RadioGroup
            android:id="@+id/radio_group_twin_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/twin_sharing_textview"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_superior_twin_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior (Rs.100000)" />

            <RadioButton
                android:id="@+id/radio_button_studio_twin_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio (Rs.110000)" />
        </RadioGroup>


        <TextView
            android:id="@+id/single_occupancy_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_twin_sharing"
            android:layout_marginTop="10dp"
            android:text="Single Occupancy" />

        <RadioGroup
            android:id="@+id/radio_group_single_occupancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/single_occupancy_textview"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_superior_single_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior (Rs.120000)" />

            <RadioButton
                android:id="@+id/radio_button_studio_single_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio (Rs.135000)" />
        </RadioGroup>


        <TextView
            android:id="@+id/room_extra_night_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_single_occupancy"
            android:layout_marginTop="10dp"
            android:text="Room For Extra Night if needed (09/08/2017)" />

        <RadioGroup
            android:id="@+id/radio_group_extra_room_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_extra_night_textview1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_superior_extra_night1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior (Rs.17500)" />

            <RadioButton
                android:id="@+id/radio_button_studio_extra_night1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio (Rs.21500)" />

        </RadioGroup>


        <TextView
            android:id="@+id/room_extra_night_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_extra_room_1"
            android:layout_marginTop="10dp"
            android:text="Room For Extra Night if needed (12/08/2017)" />

        <RadioGroup
            android:id="@+id/radio_group_extra_room_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_extra_night_textview2"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_superior_extra_night2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior (Rs.17500)" />

            <RadioButton
                android:id="@+id/radio_button_studio_extra_night2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio (Rs.21500)" />
        </RadioGroup>


        <TextView
            android:id="@+id/spouse_travelling_along"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_extra_room_2"
            android:layout_marginTop="10dp"
            android:text="Is Spouse travelling along?" />

        <RadioGroup
            android:id="@+id/spouse_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spouse_travelling_along"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/spouse_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/spouse_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

    </RelativeLayout>
</ScrollView>